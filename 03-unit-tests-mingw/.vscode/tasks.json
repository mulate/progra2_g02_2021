{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build files",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${workspaceFolder}\\obj\\clase03.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "C/C++: g++ run tests",
            "type": "shell",
            "command": "g++ -std=c++17 -g .\\src\\*.cpp .\\test\\*.cpp -lgtest -lgtest_main -lpthread  -DUNIT_TEST -o .\\obj\\tests.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}