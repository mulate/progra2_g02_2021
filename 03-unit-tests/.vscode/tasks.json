{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build files",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/test/*.cpp",
                "-lgtest",
                "-lpthread",
                "-o",
                "${workspaceFolder}/obj/clase02"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "C/C++: g++ run tests",
            "type": "shell",
            "command": "/usr/bin/g++ -std=c++17 -stdlib=libc++ -g ./src/*.cpp ./test/*.cpp -lgtest -lgtest_main -lpthread  -DUNIT_TEST -o obj/tests",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}